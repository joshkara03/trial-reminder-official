{
  "manifest_version": 3,
  "name": "Trial Reminder",
  "version": "1.0",
  "description": "Reminds you to cancel free trials so you won't be charged.",
  "permissions": ["activeTab", "storage", "scripting"],
  "icons": {
    "16": "icons/Eyes-Emoji.png",
    "48": "icons/Eyes-Emoji.png",
    "128": "icons/Eyes-Emoji.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/Eyes-Emoji.png",
      "48": "icons/Eyes-Emoji.png",
      "128": "icons/Eyes-Emoji.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}

